<Window x:Class="StreamAudioClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StreamAudioClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="230">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <TextBox x:Name="FieldIpAddress" Text="192.168.0.102" Margin="10, 10, 0, 0" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                <Button x:Name="BtnStart" Content="Connect" Margin="10, 10, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Click="BtnStart_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,0,0,0" >
                <ProgressBar x:Name="leftChannelBar" Margin="0, 10, 0, 0" Maximum="100" Minimum="0" Width="20" Height="150" Orientation="Vertical" />
                <ProgressBar x:Name="rightChannelBar" Margin="10, 10, 0, 0" Maximum="100" Minimum="0" Width="20" Height="150" Orientation="Vertical" />
            </StackPanel>
        </StackPanel>
        <Grid>
            <TextBlock x:Name="Info" ></TextBlock>


        </Grid>
    </StackPanel>

</Window>
